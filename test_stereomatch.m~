clear

max_disp=60;
window_size=41;
size_factor=0.3;

I1=imread('chairL.png');
I2=imread('chairR.png');

I1_small=imresize(I1,size_factor);
I2_small=imresize(I2,size_factor);

disp=stereomatch(I1_small,I2_small,window_size,max_disp,1);
disp=int16(disp);
disp(disp>max_disp)=0;
disp(disp<0)=0;
disp_large=double(disp);
disp_large=imresize(disp_large,[size(I1,1) size(I1,2)]);
disp=disp*1/size_factor;
disp=int16(disp);

figure
imagesc(disp);